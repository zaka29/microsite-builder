{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN",
        "NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN"
      ]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"],
      "env": [
        "NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN",
        "NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN"
      ]
    }
  }
}
